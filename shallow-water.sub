#!/bin/bash

#SBATCH -J shallow-water                              # Job name
#SBATCH -o /home/%u/output/shallow-water_%j.out    # Name of stdout output file(%j expands to jobId)
#SBATCH -e /home/%u/output/shallow-water_%j.err    # Name of stderr output file(%j expands to jobId)
#SBATCH --nodes=1                                   # Total number of nodes requested
#SBATCH --ntasks=1                                  # Total number of tasks to be configured for
#SBATCH --tasks-per-node=1                          # Sets number of tasks to run on each node
#SBATCH --cpus-per-task=1                           # Number of cpus needed by each task (if task is "make -j3" number should be 3)
#SBATCH --get-user-env                              # Tells sbatch to retrieve the users login environment
#SBATCH -t 00:01:00                                 # Time limit (hh:mm:ss)
#SBATCH --mem-per-cpu=1000                          # Memory required per allocated CPU
#SBATCH --partition=cs5220                        # Which partition/queue it should run on

source /etc/profile.d/modules.sh
module load openmpi-4.0.0
mpirun -np 1 $HOME/shallow-water/src/lshallow
